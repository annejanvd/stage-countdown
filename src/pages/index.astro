---
import Layout from '../layouts/Layout.astro';
import Clock from '../components/Clock.astro';
import Uptime from '../components/Uptime.astro';
import VacationCountdown from '../components/VacationCountdown.astro';
import Spotify from '../components/Spotify.astro';
import BusRoute from '../components/BusRoute.astro';
import WeatherBox from '../components/WeatherBox.astro';
import TechNews from '../components/TechNews.astro';

const city1Name = import.meta.env.WEATHER_CITY1_NAME || 'City 1';
const city2Name = import.meta.env.WEATHER_CITY2_NAME || 'City 2';
---

<Layout title="Dashboard">
    <div class="grid grid-cols-4 grid-rows-[auto_auto_auto] gap-6 w-full h-full p-8 max-w-[1600px] max-h-[1200px] mx-auto relative content-center">

        <!-- Uptime (Left Top, 1x1) -->
        <div class="col-span-1 bg-white/5 border border-white/10 rounded-2xl p-6 flex flex-col items-center justify-center shadow-lg backdrop-blur-sm h-48">
            <Uptime />
        </div>

        <!-- Clock (Top Broad, 2x1) -->
        <div class="col-span-2 bg-white/5 border border-white/10 rounded-2xl p-6 flex flex-col items-center justify-center shadow-lg backdrop-blur-sm h-48">
            <Clock />
        </div>

        <!-- Vacation (Right Top, 1x1) -->
        <div class="col-span-1 bg-white/5 border border-white/10 rounded-2xl p-6 flex items-center justify-center shadow-lg backdrop-blur-sm h-48">
            <VacationCountdown />
        </div>

        <!-- Bus (Left Middle, 2x1) -->
        <div class="col-span-2 bg-white/5 border border-white/10 rounded-2xl p-6 flex items-center justify-center shadow-lg backdrop-blur-sm relative overflow-hidden h-64">
            <BusRoute />
        </div>

        <!-- Spotify (Right Middle, 2x1) -->
        <div class="col-span-2 bg-white/5 border border-white/10 rounded-2xl p-6 flex items-center justify-center shadow-lg backdrop-blur-sm relative overflow-hidden h-64">
            <Spotify />
        </div>

        <!-- Weather City 1 (Left Bottom, 1x1) -->
        <div class="col-span-1 bg-white/5 border border-white/10 rounded-2xl p-6 flex items-center justify-center shadow-lg backdrop-blur-sm relative overflow-hidden h-48">
             <WeatherBox cityId="city1" cityName={city1Name} />
        </div>

        <!-- Weather City 2 (Middle Bottom, 1x1) -->
        <div class="col-span-1 bg-white/5 border border-white/10 rounded-2xl p-6 flex items-center justify-center shadow-lg backdrop-blur-sm relative overflow-hidden h-48">
             <WeatherBox cityId="city2" cityName={city2Name} />
        </div>

        <!-- Tech News (Right Bottom, 2x1) -->
        <div class="col-span-2 bg-white/5 border border-white/10 rounded-2xl p-6 flex items-center justify-center shadow-lg backdrop-blur-sm relative overflow-hidden h-48">
             <TechNews />
        </div>

    </div>

    <!-- Fullscreen Toggle -->
    <button id="fullscreen-btn" class="absolute bottom-6 right-6 w-10 h-10 rounded-xl bg-white/5 border border-white/10 flex items-center justify-center hover:bg-white/10 transition-colors z-20 cursor-pointer text-text-muted" title="Toggle Fullscreen">
        <svg id="fs-expand" class="w-5 h-5" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 3.75v4.5m0-4.5h4.5m-4.5 0L9 9M3.75 20.25v-4.5m0 4.5h4.5m-4.5 0L9 15M20.25 3.75h-4.5m4.5 0v4.5m0-4.5L15 9m5.25 11.25h-4.5m4.5 0v-4.5m0 4.5L15 15"/>
        </svg>
        <svg id="fs-shrink" class="w-5 h-5 hidden" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" d="M9 9V4.5M9 9H4.5M9 9 3.75 3.75M9 15v4.5M9 15H4.5M9 15l-5.25 5.25M15 9h4.5M15 9V4.5M15 9l5.25-5.25M15 15h4.5M15 15v4.5m0-4.5 5.25 5.25"/>
        </svg>
    </button>
    
    <script>
        const fsBtn = document.getElementById('fullscreen-btn');
        const fsExpand = document.getElementById('fs-expand');
        const fsShrink = document.getElementById('fs-shrink');

        fsBtn?.addEventListener('click', () => {
             if (!document.fullscreenElement) {
                document.documentElement.requestFullscreen();
            } else {
                document.exitFullscreen();
            }
        });

        document.addEventListener('dblclick', (e) => {
            if (e.target === document.body || (e.target as HTMLElement).classList.contains('grid')) {
                 if (!document.fullscreenElement) {
                    document.documentElement.requestFullscreen();
                } else {
                    document.exitFullscreen();
                }
            }
        });

        document.addEventListener('fullscreenchange', () => {
            const isFs = !!document.fullscreenElement;
            if (fsExpand) fsExpand.classList.toggle('hidden', isFs);
            if (fsShrink) fsShrink.classList.toggle('hidden', !isFs);
        });
    </script>
</Layout>
