---
const vacations = [
    // 2025-2026
    { name: 'Voorjaarsvakantie', start: new Date('2026-02-21') },
    { name: 'Meivakantie', start: new Date('2026-04-25') },
    { name: 'Zomervakantie', start: new Date('2026-07-11') },
    // 2026-2027
    { name: 'Herfstvakantie', start: new Date('2026-10-17') },
    { name: 'Kerstvakantie', start: new Date('2026-12-19') },
    { name: 'Voorjaarsvakantie', start: new Date('2027-02-20') },
    { name: 'Meivakantie', start: new Date('2027-05-01') },
    { name: 'Zomervakantie', start: new Date('2027-07-10') },
];

const now = new Date();
const upcoming = vacations.find(v => v.start > now);
let daysLeft = 0;
let name = 'Geen vakantie';

if (upcoming) {
    const diff = upcoming.start.getTime() - now.getTime();
    daysLeft = Math.ceil(diff / (1000 * 60 * 60 * 24));
    name = upcoming.name;
}
---

<div class="flex flex-col items-center justify-center">
    <span class="text-text-secondary uppercase tracking-wider text-lg font-medium">
        {name}
    </span>
    <span class="text-temp-cold text-4xl font-semibold mt-3 tabular-nums">
        {daysLeft}d
    </span>
</div>
